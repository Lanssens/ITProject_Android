<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:contentDescription="@string/listview_product_image"
        app:srcCompat="@drawable/ic_button_camera"
        android:id="@+id/productImageImageView"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:layout_gravity="center"
        android:layout_margin="0dp"
        android:padding="0dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productTitleTextView"
        android:text="@string/listItemProductTitle"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/productRatingBar"
        android:isIndicator="true"
        android:numStars="5"
        android:stepSize="0.1"
        android:layout_gravity="center"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"/>

    <TextView
        android:text="@string/listItemProductPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productPriceTextView"
        android:textAlignment="center"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"/>

    <TextView
        android:text="@string/listItemProductAvailability"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productAvailabilityTextView"
        android:textAlignment="center"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"/>

</LinearLayout>