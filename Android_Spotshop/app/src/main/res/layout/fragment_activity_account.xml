<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="30dp">


        <TextView

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Name:"
            android:textSize="16dip"

            />


        <TextView
            android:id="@+id/account_header_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"

            android:textColor="#df6162"
            android:text=""
            android:textSize="16dip"

            />


        <TextView

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Mail:"
            android:textSize="16dip"

            />
        <TextView
            android:id="@+id/account_header_mail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"

            android:textColor="#df6162"
            android:text=""
            android:textSize="16dip"


            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="25dp"
            android:background="?android:attr/listDivider"/>

        <TextView
            android:id="@+id/account_link_accountdetails"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#df6162"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="Account Details"
            android:textSize="16dip"

            android:paddingLeft="8dip"
            android:drawableLeft="@drawable/ic_menu_account"
            android:drawablePadding="-135dp"/>

        <TextView
            android:id="@+id/account_link_orderhistory"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:textColor="#df6162"
            android:gravity="center"
            android:text="Order History"
            android:textSize="16dip"

            android:paddingLeft="8dip"
            android:drawableLeft="@drawable/ic_menu_order_history"
            android:drawablePadding="-155dp"/>

        <TextView
            android:id="@+id/account_link_mail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:textColor="#df6162"
            android:gravity="center"
            android:text="Change Email"
            android:textSize="16dip"

            android:paddingLeft="8dip"
            android:drawableLeft="@drawable/ic_account_openmail"
            android:drawablePadding="-150dp"/>

        <TextView
            android:id="@+id/account_link_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#df6162"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="Change Password"
            android:textSize="16dip"

            android:paddingLeft="8dip"
            android:drawableLeft="@drawable/ic_account_password"
            android:drawablePadding="-120dp"/>



        <TextView
            android:id="@+id/account_link_logout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:textColor="#df6162"
            android:gravity="center"
            android:text="Logout"
            android:textSize="16dip"
            android:paddingLeft="8dip"
            android:drawableLeft="@drawable/ic_menu_logout"
            android:drawablePadding="-195dp"/>

    </LinearLayout>
</ScrollView>